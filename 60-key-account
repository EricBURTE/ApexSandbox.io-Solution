public Boolean isKeyAccount(Account a) {
    Boolean isAboveThreshold = false;  
    Map<String,Double> mapYearlyRevenueRef = new Map<String,Double> {
                                                'Banking' => 600000,
                                                'Technology' => 800000,
                                                'Retail' => 2000000,
                                                'Others' => 500000
                                            };
    List<String> listIndustriesWithDefinedThresholds = new List<String> {'Banking','Technology','Retail'};               
    String sIndustry = listIndustriesWithDefinedThresholds.contains(a.Industry) ? a.Industry : 'Others';

    /*
    if (sIndustry!='Banking' && sIndustry!='Technology' && sIndustry!='Retail'){
        sIndustry = 'Others';
    }*/
    
    if (a.AnnualRevenue >= mapYearlyRevenueRef.get(sIndustry)) {
        isAboveThreshold = true;
    }

    return isAboveThreshold;
}