public boolean isSorted(List<Integer> numbers) {
    public enum EnumListDirection { Undefined, Upwards, Downwards };


    Boolean bSorted=true,bUpwardTrend;
    EnumListDirection trend = EnumListDirection.Undefined;

    if(numbers.size() < 3) {
        return true;
    } 
    else {
        bUpwardTrend = numbers[0] < numbers[1] ? true : false;
    }  

    for(Integer i = 0; i < numbers.size()-1 ; i++){
        if 
        if(numbers[i] < numbers[i+1] && !bUpwardTrend){
            bSorted = false;
        }
        if(numbers[i] > numbers[i+1] && bUpwardTrend){
            bSorted = false;
        }
    }
   return bSorted; 
}