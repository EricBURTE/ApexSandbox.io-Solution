public boolean isSorted(List<Integer> numbers) {
    public enum EnumListDirection { UNDEFINED, UP, DOWN }
    Boolean bSorted = true;
    String sDirection = 'UNDEFINED';

    //shortens the execution by 2 loop iterations
    if(numbers.size() < 3) { return true; }

    for(Integer i = 0; i < numbers.size()-1 ; i++){
 
        if(numbers[i] < numbers[i+1]){
            if (sDirection == 'UNDEFINED'){
                sDirection = 'UP';
            }
            else {
                bSorted = sDirection =='DOWN' ? false : true ;
            }
            
        }
        else if(numbers[i] > numbers[i+1]){
            if (sDirection == 'UNDEFINED'){
                sDirection = 'DOWN';
            }
            else {
                bSorted = sDirection =='UP' ? false : true ;
            }
        }
    }
   return bSorted; 
}