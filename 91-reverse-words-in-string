public static String reverseWords(String str){
    list<string> lstWords = new list<String>();
   lstWords = str.split(' ');
    String sReversedSentence = '';
    for (integer i=0, i<str.size(), i++) {
        sReversedSentence += lstWord[i].reverse();
        if (i<str.size()-1) {sReversedSentence += ' ';}
