public static String reverseWords(String str){
    //list<string> lstWords = new list<String>();
    list<String> lstWords = str.split(' ');
    String sReversedSentence = '';
    for (Integer i=0 ; i<lstWords.size() ; i++) {
        sReversedSentence += lstWords[i].reverse();
        if (i<lstWords.size()-1) {sReversedSentence += ' ';}
    }
    return sReversedSentence;
}