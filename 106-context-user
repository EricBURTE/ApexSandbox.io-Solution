public Map<String,String> getContextUserInformation(){
    Map<String,String> mapInfos = new Map<String,String>();
    mapInfos.put('UserName', UserInfo.getUserName());
    mapInfos.put('ProfileId', UserInfo.getProfileId());
    mapInfos.put('EmailId', UserInfo.getUserEmail());
    mapInfos.put('Type', UserInfo.getUserType());
    return mapInfos;
}