public Integer secondLargest(List<Integer> numbers) {
    numbers.sort();
    Set<Integer> sListInput = new Set<Integer>(numbers);
    sListInput.sort();
    return  sListInput.size()>1 ? 
            (new list<string>(sListInput))[sListInput.size()-2] :
            (new list<string>(sListInput))[0];
    
    
