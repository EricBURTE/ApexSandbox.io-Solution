public static Integer longestDistinctSubstring(String str, Integer k){ 
    Integer iCurrent=0;
    Integer lMax=0, lCurrent=0;
    String sMax, sCurrent;

    for (Integer i=0 ; i<str.length() ; i++){
        sCurrent = '';
        iCurrent = 0;
    
        while(     (i+iCurrent < str.length())
                &&  iCurrent <= k ){
            if ( sCurrent.contains(str[i+iCurrent]) ) {
                sCurrent += str[i+iCurrent];

            }
            else {
                sCurrent += str[i+iCurrent];
                lCurrent++;
            }
            iCurrent++;
        }

        if (lCurrent>lMax) {lMax = lCurrent ; sMax = sCurrent ;}
    }
    return lMax;
}